{
    "name": "PyMKV Devcontainer",
    "dockerComposeFile": "./compose.yaml",
    "service": "devcontainer",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": ["ms-python.black-formatter", "ms-python.python"],
            "settings": {
                // Prevents VSCode from breaking ~/.docker/config.json
                // Allows postCreateCommand and other hooks to always run
                // as if VSCode fails to edit ~/.docker/config.json
                // It does not execute any subsequent hook scripts
                "dev.containers.dockerCredentialHelper": false,
                "python.linting.enabled": true
            }
        }
    },
    "initializeCommand": "bash ./.devcontainer/lifecycle_scripts/initialize.sh",
    "postCreateCommand": "bash ./.devcontainer/lifecycle_scripts/post_create.sh",
    "postAttachCommand": "bash ./.devcontainer/lifecycle_scripts/post_attach.sh"
}
